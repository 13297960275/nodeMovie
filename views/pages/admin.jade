extends ../layout

block content
	.container
		.row
			h3 #{title}
	.container
		.row
			form.form-horizontal(method="post",action="/admin/movie/new")
				input(type="hidden",name="movie[_id]" value="#{movie._id}")
				.form-group
					label.col-sm-2.control-label(for="title") title
					.col-sm-10
						input#title.form-control(type="text",name="movie[title]",value="#{movie.title}")
				.form-group
					label.col-sm-2.control-label(for="doctor") doctor
					.col-sm-10
						input#title.form-control(type="text",name="movie[doctor]",value="#{movie.doctor}")
				.form-group
					label.col-sm-2.control-label(for="country") country
					.col-sm-10
						input#title.form-control(type="text",name="movie[country]",value="#{movie.country}")
				.form-group
					label.col-sm-2.control-label(for="language") language
					.col-sm-10
						input#title.form-control(type="text",name="movie[language]",value="#{movie.language}")
				.form-group
					label.col-sm-2.control-label(for="poster") poster
					.col-sm-10
						input#title.form-control(type="text",name="movie[poster]",value="#{movie.poster}")
				.form-group
					label.col-sm-2.control-label(for="flash") flash
					.col-sm-10
						input#title.form-control(type="text",name="movie[flash]",value="#{movie.flash}")
				.form-group
					label.col-sm-2.control-label(for="year") year
					.col-sm-10
						input#title.form-control(type="text",name="movie[year]",value="#{movie.year}")
				.form-group
					label.col-sm-2.control-label(for="summary") summary
					.col-sm-10
						input#title.form-control(type="text",name="movie[summary]",value="#{movie.summary}")
				.form-group
					.col-sm-10.col-sm-offset-2
						button.btn.btn-info(type="submit") submit