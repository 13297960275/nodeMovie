.navbar.navbar-default.navbar-fixed-buttom
	.container
		.navbar-header
			a.navbar-brand(href="/") Movie Box
		p.navbar-text.navbar-right
			a.navbar-link(href="#",data-toggle="modal",data-target="#signupModal") Sign Up
			span &nbsp;|&nbsp;
			a.navbar-link(href="#",data-toggle="modal",data-target="#signinModal") Sign In

#signupModal.modal.fade
	.modal-dialog
		.modal-content
			form(method="POST",action="/user/signup")
				.modal-header
					button.close(type="button" class="" data-dismiss="modal" aria-hidden="true") &times;
					h4.modal-title Sign Up
				.modal-body
					.form-group
						label(for="signupName") Name
						input#signupName.form-control(name="user[name]",type="text")

					.form-group
						label(for="signupPwd") Password
						input#signupPwd.form-control(name="user[password]",type="text")
				.modal-footer
					button.btn.btn-default(type="button",data-dismiss="modal") Cancel
					button.btn.btn-success(type="submit") Submit

