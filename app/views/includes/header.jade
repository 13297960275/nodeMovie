
.navbar.navbar-default.navbar-fixed-buttom
	.container
		.navbar-header
			a.navbar-brand(href="/") Movie Box
		if user
			p.navbar-text.navbar-right
				span Welcome,#{user.name}
				span &nbsp;|&nbsp;
				a.navbar-link(href="/admin/user/signout") Sign Out
		else
			p.navbar-text.navbar-right
				a.navbar-link(href="/admin/user/signup") Sign Up
				span &nbsp;|&nbsp;
				a.navbar-link(href="/admin/user/signin") Sign In
