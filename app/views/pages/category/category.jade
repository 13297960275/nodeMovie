extends ../../layout

block content
	.container
		.row
			h3 #{title}
	.container
		.row
			form.form-horizontal(method="post",action="/admin/category/add")
				input(type="hidden",name="category[_id]" value="#{category._id}")
				.form-group
					label.col-sm-2.control-label(for="name") category
					.col-sm-10
						input#name.form-control(type="text",name="category[name]",value="#{category.name}")
				.form-group
					label.col-sm-2.control-label(for="intro") intro
					.col-sm-10
						input#title.form-control(type="text",name="category[intro]",value="#{category.intro}")
				.form-group
					.col-sm-10.col-sm-offset-2
						button.btn.btn-info(type="submit") submit