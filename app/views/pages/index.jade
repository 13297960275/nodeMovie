extends ../layout

block content
	.container
		.row
			h3 #{title}
	.container
		.row
			each cat in categories
				.panel.panel-info
					.panel-heading
						h4 #{cat.name}
							small &nbsp;|&nbsp; #{cat.intro}
					.panel-body
						if cat.movies && cat.movies.length > 0
							each item in cat.movies
								.col-md-2.col-sm-4.col-xs-6
									.thumbnail
										a(href="/movie/#{item._id}")
											img(src="#{item.poster}",alt="#{item.title}",style="height:160px;widrh:100px;")
										.caption(style="width:100%;")
											h5.text-overflow #{item.title}
											a.glyphicon.glyphicon-play(href="/movie/#{item._id}",style="position:relative;font-size: 2rem;left:80%;buttom:20%;")

