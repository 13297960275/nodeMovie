extends ../layout

block content
	.container
		.row
			h3 #{title}
	.container
		.row
			each item in movies
				.col-md-2
					.thumbnail
						p(href="/movie/#{item._id}")
							img(src="#{item.poster}",alt="#{item.title}")
						.caption
							h3 #{item.title}
							p(style="width:100%;")
								a.glyphicon.glyphicon-play(href="/movie/#{item._id}",style="font-size: 2rem;left:80%;")
