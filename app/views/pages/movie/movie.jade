extends ../../layout

block content
	//- .container
	//- 	.row
	//- 		h3 #{title}
	.container
		.row
			form.form-horizontal(method="post",action="/admin/movie/add",enctype="multpart/form-data")
				if movie._id
					input(type="hidden",name="movie[_id]" value="#{movie._id}")
				else 
					.form-group
						label.col-sm-2.control-label douban
						.col-sm-10
							input.form-control#douban(type="text")					
				.form-group
					label.col-sm-2.control-label(for="category") category
					.col-sm-10
						if !movie._id	
							input#catSelext(type="checkbox",value="") 
							| Custom					
							#inputCategory
								//- input#category.form-control(type="text",name="movie[category]",value=movie.categoryName)
								.col-sm-6.form-inline
									label.control-label.col-sm-2(for="name") name
									.col-sm-10
										input.form-control#catName(type="text",name="movie[categoryName]",value=movie.categoryName)
								.col-sm-6.form-inline
									label.control-label.col-sm-2(for="intro") intro
									.col-sm-10
										input.form-control#catIntro(type="text",name="movie[categoryIntro]",value=movie.categoryName)
						#selectCategory
							each cat in categories
								label.radio-inline
									if movie._id
										input(type="radio",name="catRadio",value="#{cat._id}",checked=cat._id.toString() == movie.category.toString()) 
										| #{cat.name}
									else
										input.catSelext(type="radio",name="catRadio",value="#{cat._id}") 
										| #{cat.name}	
				.form-group
					label.col-sm-2.control-label(for="title") title
					.col-sm-10
						input#title.form-control(type="text",name="movie[title]",value="#{movie.title}")
				.form-group
					label.col-sm-2.control-label(for="doctor") doctor
					.col-sm-10
						input#doctor.form-control(type="text",name="movie[doctor]",value="#{movie.doctor}")
				.form-group
					label.col-sm-2.control-label(for="country") country
					.col-sm-10
						input#country.form-control(type="text",name="movie[country]",value="#{movie.country}")
				.form-group
					label.col-sm-2.control-label(for="language") language
					.col-sm-10
						input#language.form-control(type="text",name="movie[language]",value="#{movie.language}")
				.form-group
					label.col-sm-2.control-label(for="poster") poster
					.col-sm-10
						input#poster.form-control(type="text",name="movie[poster]",value="#{movie.poster}")
				.form-group
					label.col-sm-2.control-label(for="uploadPoster") upload poster
					.col-sm-10
						input#uploadPoster(type="file",name="uploadPoster")
				.form-group
					label.col-sm-2.control-label(for="flash") flash
					.col-sm-10
						input#flash.form-control(type="text",name="movie[flash]",value="#{movie.flash}")
				.form-group
					label.col-sm-2.control-label(for="year") year
					.col-sm-10
						input#year.form-control(type="text",name="movie[year]",value="#{movie.year}")
				.form-group
					label.col-sm-2.control-label(for="summary") summary
					.col-sm-10
						input#summary.form-control(type="text",name="movie[summary]",value="#{movie.summary}")
				.form-group
					.col-sm-10.col-sm-offset-2
						button.btn.btn-info(type="submit") submit
	script(src="/js/admin.js")